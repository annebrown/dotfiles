{
    "debug.allowBreakpointsEverywhere": true,
    "debug.toolBarLocation": "docked",    

    "editor.bracketPairColorization.enabled": true,
    "editor.fontFamily": "Consolas, monospace",   
    "editor.fontSize": 12,
    "editor.insertSpaces": false,   
    "editor.linkedEditing": true,
    "editor.minimap.enabled": false,   
    "editor.rulers": [
        80,
    ],
    "editor.tabCompletion": "on",
    "editor.wordWrap": "on",
    "editor.minimap.showSlider": "always",     
    "editor.suggestSelection": "first",

    "explorer.compactFolders": false,

    "files.autoSave": "onFocusChange",

    "remote.SSH.configFile": "/home/anne/.ssh/config",

    "scm.showChangesSummary": false,

    "settingsSync.ignoredSettings": [
        
        "editor.linkedEditing"
    ],

    "telemetry.telemetryLevel": "off",

    "terminal.integrated.fontSize": 12,
    "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.tabs.title": "${process}{cwd}",

    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",

    "window.autoDetectColorScheme": true,
    "window.customMenuBarAltFocus": false,
    "window.customTitleBarVisibility": "auto",
        "workbench.colorCustomizations": {
        "window.activeBorder": "#00ff88",
        "window.inactiveBorder": "#d42aeb"
    },

    "window.menuBarVisibility": "visible",

    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.commandPalette.preserveInput": true,
    "workbench.editorAssociations": {
        "*.zip": "default"
    },
    "workbench.editor.centeredLayoutFixedWidth": true,
    "workbench.editor.centeredLayoutAutoResize": false,

    "workbench.tree.indent": 25,   
    "workbench.tree.renderIndentGuides": "always",
    "workbench.preferredLightColorTheme": "Default Light Modern",

    "git.autofetch": true,

    "git.confirmSync": false,
    "git.autoStash": true,
    "git.enableSmartCommit": true,   
    "git.ignoreMissingGitWarning": true,   
    "git.openRepositoryInParentFolders": "never",
        "remote.SSH.defaultExtensions": [
        "gitpod.gitpod-remote-ssh"
    ],
    "remote.SSH.remotePlatform": {
        "*.gitpod.io": "linux"
    },

    "markdownlint.config": {
        "MD007": { "indent": 4 },
    },

    "vim.vimrc.enable": true,
    "vim.vimrc.path": "",
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }  
    ],

    "yaml.schemas": {
    "https://squidfunk.github.io/mkdocs-material/schema.json": "mkdocs.yml"
  },
  "yaml.customTags": [ 
    "!ENV scalar",
    "!ENV sequence",
    "!relative scalar",
    "tag:yaml.org,2002:python/name:material.extensions.emoji.to_svg",
    "tag:yaml.org,2002:python/name:material.extensions.emoji.twemoji",
    "tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format"
],
"editor.useTabStops": false,
"emmet.triggerExpansionOnTab": true,
"vim.enableNeovim": true,
"workbench.preferredDarkColorTheme": "Dracula Theme",
"cSpell.userWords": [
    "Cheatsheet"
],
"typescript.updateImportsOnFileMove.enabled": "always"
}